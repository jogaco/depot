<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @order.name %>
</p>

<p>
  <b>Address:</b>
  <%= @order.address %>
</p>

<p>
  <b>Email:</b>
  <%= @order.email %>
</p>

<p>
  <b>Pay type:</b>
  <%= @order.pay_type %>
</p>

<table class="order_lines">
  <caption>Order lines</caption>
  <tr>
    <th>Book title</th>
    <th>Unit price</th>
    <th>Quantity</th>
    <th>Total</th>
  </tr>
<% @order.line_items.each do |line| %>
  <tr>
    <td><%= line.product.title %></td>
    <td><%= number_to_currency_locale line.price %></td>
    <td><%= line.quantity %></td>
    <td><%= number_to_currency_locale line.total_price %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
